	КолВоБукв		= 5;
	КолВоПопыток	= 6;
	
	ЦветСерый	= Новый Цвет(128, 128, 128);
	ЦветБелый	= Новый Цвет(255, 255, 255);
	ЦветЖелтый	= Новый Цвет(255, 219, 6);
	ЦветЧерный	= Новый Цвет(0, 0, 0);
	
	СоздатьСлова();
	
КонецПроцедуры // ПриСозданииНаСервере()

